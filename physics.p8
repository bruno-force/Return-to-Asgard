pico-8 cartridge // http://www.pico-8.com
version 18
__lua__
#include lib/collisions.lua
#include lib/body.lua

local logs={}

function _init()
  cls()
  p = add_body(64,64)
  p.spr=2
end

function _update60()
  update_bodies()
  add_logs()
end

function _draw()
  cls()
  map(0,0)
  draw_bodies()
  rect(0,0,127,127,7)
  print_logs()
end

function add_logs()
  log('dx',p.dx)
  log('dy',p.dy)
  log('tile',mget(p.x/8,p.y/8))
  log('flag',fget(mget(p.x/8,p.y/8)))
end

function print_logs()
  local c=13
  local ox,oy=2,2--offset
  --first col
  for i,l in pairs(logs) do
    local px,py=ox,2+oy--print pos
    if(i%2!=0) then 
    else 
      px+=40
    end
    py=oy+(6*(flr((i-1)/2)))--floor division
    print(l[1]..':'..l[2],px,py,c)
    del(logs,l) --once printed remove log
  end
  -- logs={}
end

function log(l,v)
  add(logs,{l,v})
end
